@model List<PizzaApp.Models.ViewModels.ReviewViewModel>
<h1>Reviews</h1>

<a asp-controller="Review" asp-action="Add" class="btn btn-block float-right col-2">Add</a>


@for (int i = 0; i < Model.Count; i++)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model[i].Customer.FirstName</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model[i].DateMade</h6>
            <p class="card-text">@Model[i].Comment</p>
            <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model[i].Id" class="card-link">Delete</a>
        </div>
    </div>
}